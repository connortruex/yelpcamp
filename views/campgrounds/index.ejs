<% layout('layouts/boilerplate') %>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const allCampgrounds = { features: <%- JSON.stringify(campgrounds) %>};
    </script>
    <div id="map" class="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) { %>
                        <img src="<%= campground.images[0].url %> " alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://picsum.photos/200/300" alt="" class="img-fluid">
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text text-muted">
                            <%= campground.location %>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title
                                %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script src="/js/clusterMap.js"></script>